@model CMIForAll.Models.Indicador_Dato

@{
    ViewBag.Title = "Create";
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear indicador de datos</title>
    <link rel="stylesheet" href="~/Style/StyleforCMI.css">
</head>

<body>

    <div class="container">
        <hr>
        <hr>
        <h2>Indicador de datos</h2>
        <br>
        <form action="#">


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">


                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group col-sm">
                        @Html.LabelFor(model => model.Valor, htmlAttributes: new { @class = "control-label col-md-2 " })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Valor, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Valor, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-sm">
                        @Html.LabelFor(model => model.Fecha, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Fecha, "DD/MMM/AA", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group col-sm">
                        @Html.LabelFor(model => model.IndicadorId, "Indicador", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownList("IndicadorId", null, htmlAttributes: new { @class = "input_special" })
                            @Html.ValidationMessageFor(model => model.IndicadorId, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group button-container">
                        <button type="submit" class="button">Crear</button>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Indicadores de datos creados", "Index")
            </div>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </form>
    </div>


    <script src="~/Java/app.min.js"></script>
    <script src="~/Java/jquery.min.js"></script>
    <script src="~/Java/simplebar.js"></script>
    <script src="~/Java/bootstrap.bundle.min.js"></script>
</body>

</html>