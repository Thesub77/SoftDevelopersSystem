
@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario de Registro</title>
    <link rel="stylesheet" href="~/Content/StyleForms.css">
</head>
<body>
    <div class="container">
        <h2>Registro de Empleado</h2>
        <form action="#" method="post">
            <div class="form-group">
                <label for="nombre">Nombres</label>
                <input type="text" id="nombre" name="nombre" required class="input">
            </div>
            <div class="form-group">
                <label for="apellido">Apellidos</label>
                <input type="text" id="apellido" name="apellido" required class="input">
            </div>
            <div class="form-group">
                <label for="empresa">Puesto</label>
                <input type="text" id="puesto" name="puesto" required class="input">
            </div>
            <div class="form-group">
                <label for="departamento">Departamento</label>
                <input type="text" id="departamento" name="departamento" required class="input">
            </div>
            <div class="form-group">
                <label for="contratacion">Fecha de contratación</label>
                <input type="date" id="contratacion" name="contratacion" required class="input input-date">
            </div>
            <div class="form-group">
                <label for="salario">Salario</label>
                <input type="text" id="salario" name="salario" required class="input">
            </div>
            <div class="button-container">
                <button class="button" type="submit">Listo</button>
            </div>
        </form>
    </div>
</body>
</html>

